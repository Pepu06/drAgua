---
import Footer from "./Footer.astro";
import CardMarca from "./ui/CardMarca.astro";
import foto from "@assets/foto.png";
import { marcas } from "@lib/marcas";
---

<section
  class="bg-bgDrAgua flex justify-center items-center flex-col pt-40 gap-8 overflow-x-hidden"
  style="
border-bottom: 1px solid var(--Border-Color, #13254F);
"
>
  <h2
    class="text-center"
    style="color: var(--Pale-Color, #F2F6FF);
font-size: clamp(12px, 2vw, 14px);
font-style: normal;
font-weight: 400;
line-height: 1.4;
letter-spacing: 2px;"
  >
    <span class="text-white/75">INICIO</span> / MARCAS
  </h2>
  <h1
    class="text-center"
    style="color: #FFF;
font-size: clamp(24px, 5vw, 36px);
font-style: normal;
font-weight: 800;
line-height: 1.2;"
  >
    Marcas
  </h1>
  <div
    class="translate-y-14 w-screen"
    style="height: 1px;
flex-shrink: 0;
border-radius: 100px;
background: radial-gradient(50% 50% at 50% 50%, #13254F 0%, rgba(19, 37, 79, 0.00) 100%);"
  >
  </div>
  <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 p-4 md:p-10 lg:p-20" id="marcas-grid">
    {
      marcas.map((marca) => (
        <a href={`/marcas/${marca.nombre}`}>
          <CardMarca imgSrc={marca.fotoUrl} headingText={marca.nombre} />
        </a>
      ))
    }
  </div>
</section>
